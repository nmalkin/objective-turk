#!/bin/sh

# Performs everything necessary to delete given HIT:
# expires it, sets as it renewable, and finally deletes it.

HIT_ID=$1

aws mturk --region us-east-1 --endpoint-url https://mturk-requester-sandbox.us-east-1.amazonaws.com update-expiration-for-hit --hit-id "$HIT_ID" --expire-at "1969-01-01"
aws mturk --region us-east-1 --endpoint-url https://mturk-requester-sandbox.us-east-1.amazonaws.com update-hit-review-status --hit-id $HIT_ID
aws mturk --region us-east-1 --endpoint-url https://mturk-requester-sandbox.us-east-1.amazonaws.com delete-hit --hit-id $HIT_ID
